# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Required Environment Variables
# =============================

# Printful API Configuration
PRINTFUL_API_KEY=your_printful_api_key_here

# Snipcart Configuration
# This is the PUBLIC API key from Snipcart - it's safe to expose in client-side code
# Snipcart explicitly states this key "can be shared without security issues"
NEXT_PUBLIC_SNIPCART_API_KEY=your_snipcart_public_key_here

# Database Configuration (PostgreSQL)
DATABASE_CLIENT=postgresql
DATABASE_HOST=your_database_host_here
DATABASE_PORT=5432
DATABASE_NAME=your_database_name_here
DATABASE_USERNAME=your_database_username_here
DATABASE_PASSWORD=your_database_password_here
DATABASE_SSL=true

# Optional: Environment-specific settings
NODE_ENV=production

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Analytics and Monitoring (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Site Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Admin Authentication
ADMIN_PASSWORD=your_secure_admin_password_here
JWT_SECRET=your_jwt_secret_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
