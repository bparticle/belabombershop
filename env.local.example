# Local Environment Configuration
# Copy this file to .env.local and fill in your actual values
# .env.local is automatically loaded by Next.js and should NOT be committed to git

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment (automatically set by Next.js, but you can override)
# NODE_ENV=development

# =============================================================================
# OPTION 1: ENVIRONMENT-SPECIFIC VARIABLES (Recommended)
# =============================================================================
# Use this approach if you want separate databases and API keys for dev/prod

# Development Configuration
# -------------------------
DATABASE_HOST_DEV=localhost
DATABASE_PORT_DEV=5432
DATABASE_NAME_DEV=belabomberman_dev
DATABASE_USERNAME_DEV=your_dev_username
DATABASE_PASSWORD_DEV=your_dev_password
DATABASE_SSL_DEV=false

# Snipcart Development (Test Mode)
NEXT_PUBLIC_SNIPCART_API_KEY_DEV=your_snipcart_test_public_key
SNIPCART_SECRET_KEY_DEV=your_snipcart_test_secret_key

# Production Configuration
# ------------------------
DATABASE_HOST_PROD=your-production-host.amazonaws.com
DATABASE_PORT_PROD=5432
DATABASE_NAME_PROD=belabomberman_prod
DATABASE_USERNAME_PROD=your_prod_username
DATABASE_PASSWORD_PROD=your_prod_password
DATABASE_SSL_PROD=true

# Snipcart Production (Live Mode)
# NEXT_PUBLIC_SNIPCART_API_KEY_PROD=your_snipcart_live_public_key
# SNIPCART_SECRET_KEY_PROD=your_snipcart_live_secret_key

# =============================================================================
# OPTION 2: SINGLE VARIABLES (Alternative)
# =============================================================================
# Use this approach if you want to manually switch between environments
# Comment out the environment-specific variables above if using this approach

# Database Configuration (Generic)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=belabomberman_dev
# DATABASE_USERNAME=your_username
# DATABASE_PASSWORD=your_password
# DATABASE_SSL=false

# Snipcart Configuration (Generic)
# NEXT_PUBLIC_SNIPCART_API_KEY=your_snipcart_key
# SNIPCART_SECRET_KEY=your_snipcart_secret

# =============================================================================
# SHARED CONFIGURATION (Required for both approaches)
# =============================================================================

# Printful API
PRINTFUL_API_KEY=your_printful_api_key_here

# Database Client
DATABASE_CLIENT=postgres

# Authentication
JWT_SECRET=your_jwt_secret_here
ADMIN_PASSWORD=your_secure_admin_password

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# CORS Configuration (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Site URLs (will be auto-detected based on environment if not provided)
# NEXT_PUBLIC_SITE_URL_DEV=http://localhost:3000
# NEXT_PUBLIC_API_URL_DEV=http://localhost:3000/api
# NEXT_PUBLIC_SITE_URL_PROD=https://yourdomain.com
# NEXT_PUBLIC_API_URL_PROD=https://yourdomain.com/api

# Analytics (Optional)
# GOOGLE_ANALYTICS_ID=your_ga_id_here
